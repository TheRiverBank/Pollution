# Remove quarter and calculate mean price each year.
clean_price_data <- function(data) {
df_electricity_price_france <- data %>%
select(TIME, Value) %>%
mutate(TIME = gsub("S.*", "", TIME), Value = as.numeric(Value)) %>%
group_by(TIME) %>%
summarise(Value = mean(Value, na.rm=TRUE))
}
